{% extends '::base.html.twig' %}

{% block title %}Edit Book{% endblock %}

{% block article %}
    <h2>Edit Book</h2>

    <section class="col-lg-12">
        <form action="{{ path('book_update', {'id': book.id }) }}" method="post" {{ form_enctype(edit_form) }} accept-charset="utf-8">

            <div class="row">
                <div class="col-lg-8">
                    <div class="form-group">
                        {{ form_label(edit_form.title) }}
                        {{ form_widget(edit_form.title, { 'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.author) }}
                        {{ form_widget(edit_form.author, { 'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.summary) }}
                        {{ form_widget(edit_form.summary, { 'attr': {'class': 'form-control', 'rows': '5'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.edition_date) }}
                        {{ form_widget(edit_form.edition_date) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.image, 'New image') }}
                        {{ form_widget(edit_form.image) }}
                        <span class="help-block">Maximum size: 500 KB.</span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div>
                        {{ form_label(edit_form.image, 'Image') }}
                        {{ form_errors(edit_form.image) }}

                        <img src="{{ asset('uploads/images/' ~ book.image ) }}" />
                    </div>
                </div>
                {{ form_rest(edit_form) }}
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary">
            </div>
        </form>

        <ul>
            <li>
                <a href="{{ path('book_index') }}"> Back to list </a>
            </li>
            <li>

            </li>
        </ul>
    </section>
{% endblock %}
